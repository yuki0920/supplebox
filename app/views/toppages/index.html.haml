- content_for :cover do
  .cover
    .cover-inner
      .cover-contents
        %h1 プロテイン選びで失敗したくないあなたへ
        - unless logged_in?
          = link_to 'SuppleBoxを始める', signup_path, class: 'btn btn-success btn-lg cover-button'
#top-page
  = javascript_pack_tag 'top_page'

%h2 お気に入りアイテムランキング
= render 'products/products', {products: @products, ranking_counts: @ranking_counts }
.text-center
  = link_to 'お気に入りアイテムをもっと見る', rankings_path, class: 'btn btn-success btn-lg'
%h2 最新の口コミ
= render 'posts/posts', posts: @posts
.text-center
  = link_to '最新の口コミをもっと見る', posts_path, class: 'btn btn-success btn-lg'
